---
import "../styles/tailwind.css";
import Navbar from "../components/Navbar.astro";
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Cheatsheat</title>
	</head>
		<body class="min-h-screen bg-white text-slate-800 dark:bg-slate-900 dark:text-slate-100">
		<div class="min-h-screen flex flex-col">
			<Navbar />

			<div class="flex-1 flex overflow-hidden">
					<aside class="hidden md:block w-64 border-r border-slate-100 bg-slate-50 dark:bg-slate-800 dark:border-slate-700">
					<Sidebar />
				</aside>

				<main class="flex-1 overflow-auto p-6">
					<slot />
				</main>
			</div>

			<Footer />
		</div>
	</body>
</html>

